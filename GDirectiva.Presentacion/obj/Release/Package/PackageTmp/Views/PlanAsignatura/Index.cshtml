@using GDirectiva.Presentacion.Resource.Base
@using GDirectiva.Presentacion.Resource.General

@using GDirectiva.Presentacion.Core.Helpers
@model GDirectiva.Presentacion.Core.ViewModel.General.PlanAsignaturaBusquedaModel
@{
    ViewBag.Title = "Plan Asignatura";
}
<div class="content-body">
    <div class="main-colum">
        <form id="frmPlanAsignaturaBusqueda" action="@Url.Action("General", "PlanAsignatura")">
            <!-- wrap -->
            <div class="box-wrap-main">
                <div class="box-wrap-header">
                    <div class="pull-left">
                        <div class="title-main">
                            PLAN DE ASIGNATURA - BÚSQUEDA
                        </div>
                    </div>
                </div>
                <div class="box-wrap-body">
                    <div class="box-form">
                        <div class="row">
                            <div class="col-xs-4">
                                <div class="form-group">
                                    <label>@PlanAsignaturaResource.EtiquetaPeriodoAcademico:</label>
                                    <select id="slcPeriodoAcademico" name="value" class="form-control">
                                        <option value="0">@GenericResource.EtiquetaSeleccionar</option>
                                        @{
                                            if (Model.ListaPeriodoAcademico != null)
                                            {
                                                foreach (var item in Model.ListaPeriodoAcademico)
                                                {
                                                    <option value="@item.ID_PERIODOACADEMICO">@item.PERIODO</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="form-group">
                                    <label>@PlanAsignaturaResource.EtiquetaPlanArea:</label>
                                    <select id="slcPlanArea" name="value" class="form-control">
                                        <option value="0">@GenericResource.EtiquetaSeleccionar</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="form-group">
                                    <label>@PlanAsignaturaResource.EtiquetaAsignatura:</label>
                                    <select id="slcAsignatura" name="value" class="form-control">
                                        <option value="0">@GenericResource.EtiquetaSeleccionar</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-acciones">
                        <div class="pull-right">
                            <button type="button" id="btnBuscar" class="btn-s btn-search">Buscar</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- cierra wrap -->
        </form>
    </div>
    <div id="divGrdResult">
    </div>
    <div class="row">
        <div class="col-sm-12">
            <button id="btnAgregar" class="btn-s btn-add">@GenericResource.BotonRegistrar</button>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">

    ns('GDirectiva.Presentacion.General.PlanAsignatura.Actions')
    GDirectiva.Presentacion.General.PlanAsignatura.Actions.Buscar = '@Url.Action("Buscar", "PlanAsignatura", new { Area = "General" })';
    GDirectiva.Presentacion.General.PlanAsignatura.Actions.FormularioRegistro = '@Url.Action("FormularioRegistro", "PlanAsignatura", new { Area = "General" })';
    GDirectiva.Presentacion.General.PlanAsignatura.Actions.Registrar = '@Url.Action("Registrar", "PlanAsignatura", new { Area = "General" })';
    GDirectiva.Presentacion.General.PlanAsignatura.Actions.Eliminar = '@Url.Action("Eliminar", "PlanAsignatura", new { Area = "General" })';
    GDirectiva.Presentacion.General.PlanAsignatura.Actions.Activar = '@Url.Action("Activar", "PlanAsignatura", new { Area = "General" })';
    GDirectiva.Presentacion.General.PlanAsignatura.Actions.BuscarPlanArea = '@Url.Action("BuscarPlanArea", "PlanAsignatura", new { Area = "General" })';
    GDirectiva.Presentacion.General.PlanAsignatura.Actions.BuscarAsignatura = '@Url.Action("BuscarAsignatura", "PlanAsignatura", new { Area = "General" })';
    GDirectiva.Presentacion.General.PlanAsignatura.Actions.BuscarDocente = '@Url.Action("BuscarDocente", "PlanAsignatura", new { Area = "General" })';

    ns('GDirectiva.Presentacion.General.PlanAsignatura.Resource')
    GDirectiva.Presentacion.General.PlanAsignatura.Resource.EtiquetaTituloFormulario = '@PlanAsignaturaResource.EtiquetaTituloFormulario';
    GDirectiva.Presentacion.General.PlanAsignatura.Resource.EtiquetaPeriodoAcademico = '@PlanAsignaturaResource.EtiquetaPeriodoAcademico';
    GDirectiva.Presentacion.General.PlanAsignatura.Resource.EtiquetaPlanArea = '@PlanAsignaturaResource.EtiquetaPlanArea';
    GDirectiva.Presentacion.General.PlanAsignatura.Resource.EtiquetaAsignatura = '@PlanAsignaturaResource.EtiquetaAsignatura';
    GDirectiva.Presentacion.General.PlanAsignatura.Resource.EtiquetaMetas = '@PlanAsignaturaResource.EtiquetaMetas';
    GDirectiva.Presentacion.General.PlanAsignatura.Resource.EtiquetaMetodologias = '@PlanAsignaturaResource.EtiquetaMetodologias';
    GDirectiva.Presentacion.General.PlanAsignatura.Resource.EtiquetaEstado = '@PlanAsignaturaResource.EtiquetaEstado';
    GDirectiva.Presentacion.General.PlanAsignatura.Resource.ErrorDeExtension = '@PlanAsignaturaResource.ErrorDeExtension';
</script>
    @CustomHtmlHelper.RenderViewJs("generalplanasignaturaformularioregistro")
}